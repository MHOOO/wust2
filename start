#!/bin/bash -e

export POSTGRES_DB=${POSTGRES_DB:-'wust'} \
       POSTGRES_USER=${POSTGRES_USER:-'test'} \
       POSTGRES_PASSWORD=${POSTGRES_PASSWORD:-'test'}

stage="$1"
compose="$(dirname $0)/docker/compose $stage"

case $stage in
test.postgres)
    sbt postgres/docker
    $compose down
    $compose up -d postgres
    $compose run test
    rc=$?
    $compose down
    exit $rc
    ;;
dev.docker)
    sbt postgres/docker
    $compose down
    $compose run --service-ports wust sbt dev
    ;;
dev)
    sbt postgres/docker
    $compose down
    $compose up -d
    POSTGRES_HOSTNAME=localhost sbt dev
    ;;
prod)
    sbt docker
    $compose down
    $compose up -d
    ;;
*)
    echo "unknown stage '$1', expected one of [dev,dev.docker,test.postgres,prod]"
    exit 1
esac
